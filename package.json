{
  "name": "font-inspector",
  "version": "0.1.0",
  "private": true,
  "description": "A comprehensive font analysis tool for web developers and designers",
  "author": {
    "name": "Kimmy Kim",
    "email": "kimmykimcompany@gmail.com"
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "server": "node src/server/server.js",
    "server:dev": "nodemon src/server/server.js",
    "server:temp": "node src/server-temp.js",
    "test-inspect": "node test-inspection.js",
    "test": "node src/server/run-tests.js",
    "test:api": "node src/server/run-tests.js --api-only",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run build-electron\" \"wait-on dist-electron/main.js && cross-env NODE_ENV=development electron .\"",
    "electron:pack": "npm run build:all && electron-builder",
    "electron:dist": "npm run build:all && electron-builder --publish=never",
    "build-electron": "tsc -p electron/tsconfig.json",
    "build:all": "npm run build && npm run build-electron",
    "build:prod": "cross-env NODE_ENV=production npm run build:all",
    "dist": "npm run build:prod && electron-builder --publish=never",
    "dist:mac": "npm run build:prod && electron-builder --mac --publish=never",
    "dist:win": "npm run build:prod && electron-builder --win --publish=never",
    "dist:linux": "npm run build:prod && electron-builder --linux --publish=never",
    "postinstall": "electron-builder install-app-deps",
    "migrate:add-version": "node scripts/add-version-to-users.js"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.7",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-tabs": "^1.1.4",
    "@reduxjs/toolkit": "^2.6.1",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "firebase": "^11.6.0",
    "firebase-admin": "^13.2.0",
    "lucide-react": "^0.487.0",
    "next": "15.3.0",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.6",
    "node-fetch": "^2.7.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.5.3",
    "puppeteer-core": "^24.10.2",
    "react": "^19.0.0",
    "react-day-picker": "^8.10.1",
    "react-dom": "^19.0.0",
    "redux": "^5.0.1",
    "shadcn-ui": "^0.9.5",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "ts-node": "^10.9.1",
    "tw-animate-css": "^1.2.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@stagewise-plugins/react": "^0.4.8",
    "@stagewise/toolbar-next": "^0.4.8",
    "@tailwindcss/postcss": "^4",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^20",
    "@types/puppeteer": "^5.4.7",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.3.0",
    "postcss-preset-env": "^10.1.5",
    "tailwindcss": "^4.1.3",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.fontinspector.app",
    "productName": "Font Inspector",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist-electron/**/*",
      "out/**/*",
      "src/server/**/*",
      "scripts/**/*",
      "package.json",
      "next.config.ts",
      "tsconfig.json",
      "firebase.json",
      "firestore.rules",
      "firestore.indexes.json",
      "!src/app/**/*",
      "!src/components/**/*",
      "!src/contexts/**/*",
      "!**/*.ts",
      "!**/*.tsx",
      "!**/node_modules/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "electron/assets/icon.icns",
      "category": "public.app-category.developer-tools",
      "bundleVersion": "1.0.0",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "electron/assets/icon.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "electron/assets/icon.png",
      "category": "Development"
    },
    "dmg": {
      "title": "Font Inspector",
      "format": "ULFO",
      "background": "build/background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "kimmykimkw",
      "repo": "font_inspector"
    }
  }
}
